@model DaceItFront.Models.Player

@{
    ViewData["Title"] = "Create";
}

<h1>Регистрация</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registration">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SteamId" class="control-label"></label>
                <input asp-for="SteamId" class="form-control" />
                <span asp-validation-for="SteamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamePlayer" class="control-label"></label>
                <input asp-for="NamePlayer" class="form-control" />
                <span asp-validation-for="NamePlayer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
